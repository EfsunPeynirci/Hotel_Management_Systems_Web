@model IEnumerable<WebAppHotelManagement.ViewModel.BookingDetailsViewModel>


<head>
    @*Linku per ikona te bootstrap, (perdorimi: class="bi bi-trash")*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>



<style>

    .custom-thead {
        background-color: #0D6EFD;
        color: white;
    }

    th {
        color: white;
    }

    table {
        border: 1px solid black;
    }
</style>

<table style="width: 100%;" class="table table-bordered, table table-striped">
    <thead class="custom-thead">
        <tr class="table-active">
            <th>
                Action
            </th>
            <th>
                Booking Id
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Customer Address
            </th>
            <th>
                Booking From
            </th>
            <th>
                Booking To
            </th>
            <th>
                Assign Room
            </th>
            <th>
                Number of Members
            </th>
            <th>
                Total Amount
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.CustomerName
                </td>
                <td>
                    @item.CustomerAddress
                </td>
                <td>
                    @item.BookingFrom
                </td>
                <td>
                    @item.BookingTo
                </td>
                <td>
                    @item.AssignRoomId
                </td>
                <td>
                    @item.NoOfMembers
                </td>
                <td>
                    @item.TotalAmount
                </td>
            </tr>
        }
    </tbody>
</table>
