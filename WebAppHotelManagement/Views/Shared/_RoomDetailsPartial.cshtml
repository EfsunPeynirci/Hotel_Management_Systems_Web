@model IEnumerable<WebAppHotelManagement.ViewModel.RoomDetailsViewModel>

<head>
    @* Link for bootstrap icons (usage: class="bi bi-trash") *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<style>
    .custom-thead {
        background-color: #0D6EFD;
        color: white;
    }

    th {
        color: white;
    }

    @*siyah cerceve color-profile cizer*@
    table {
        border: 1px solid black;
    }
</style>

<table style="width: 100%;" class="table table-bordered table-striped">
    <thead class="custom-thead">
        <tr class="table-active">
            <th>
                Action
            </th>
            <th>
                Room Image
            </th>
            <th>
                Room No.
            </th>
            <th>
                Room Price
            </th>
            <th>
                Booking Status
            </th>
            <th>
                Room Type
            </th>
            <th>
                Room Capacity
            </th>
            <th>
                Room Description
            </th>
        </tr>
    </thead>
    @*var item in Model ile modeldeki her bir öğe (oda) için bir döngü başlatır*@
    @*tr bir satir olusturmak icin*@
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <span id="btnDelete" class="bi bi-trash" onclick="DeleteRoom(@item.RoomId)"></span> &nbsp;&nbsp;
                    <span id="btnEdit" class="bi bi-pencil" onclick="EditRoom(@item.RoomId)"></span> &nbsp;&nbsp;
                </td>
                <td>
                    <img src="@Url.Content("~/RoomImages/" + item.RoomImage)" width="30" height="30" class="img-responsive" alt="Alternate Text" />
                </td>
                <td>
                    @item.RoomNumber
                </td>
                <td>
                    @item.RoomPrice
                </td>
                <td>
                    @item.BookingStatus
                </td>
                <td>
                    @item.RoomType
                </td>
                <td>
                    @item.RoomCapacity
                </td>
                <td>
                    @item.RoomDescription
                </td>
            </tr>
        }
    </tbody>
</table>
